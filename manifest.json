{
  "manifest_version": 2,
  "name": "Cabulary",
  "version": "1.0",
  "description": "Cabulary allows you to create flashcards of words you look up so you can refer to them whenever you want.",

  "browser_action": {
    "default_icon": "imgs/icon48.png",
    "default_popup": "popup.html"
  },
  
  "icons": {
    "32": "imgs/icon32.png",
    "48": "imgs/icon48.png",
    "64": "imgs/icon64.png",
    "128": "imgs/icon128.png"
  },

  "permissions": [
  	"storage",
  	"contextMenus",
  	"notifications",
  	"http://www.dictionaryapi.com/"
  ],

  "background": {
        "page":"background.html",
        "persistent": true
    },

  "author": "xaksis"
}